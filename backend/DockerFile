FROM maven:3.9.5-eclipse-temurin-17-alpine

WORKDIR /app

# Copy pom.xml first to cache dependencies
COPY pom.xml .

# Copy source code
COPY src src

# Build the application
RUN mvn clean package -DskipTests

# Find the jar file name and store it in an environment variable
RUN find target -name '*.jar' -exec cp {} app.jar \;

EXPOSE 8080

# Run the jar file
CMD ["java", "-jar", "target/*.jar"]
FROM maven:3.9.5-eclipse-temurin-17-alpine

WORKDIR /app

# Copy pom.xml first to cache dependencies
COPY pom.xml .

# Copy source code
COPY src src

# Build the application
RUN mvn clean package -DskipTests

# Print the contents of target directory to debug
RUN ls -la target/

# Find and rename the jar
RUN cp target/mahjong-0.0.1-SNAPSHOT.jar app.jar

EXPOSE 8080

# Run the jar file
CMD ["java", "-jar", "target/*.jar"]